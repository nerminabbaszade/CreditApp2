<!-- start product Area -->
<section class="owl-carousel active-product-area section_gap">
<!-- single product slide -->
<div class="single-product-slider">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <div class="section-title">
                    <h1>Latest Products</h1>
                    <p>
                        Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et
                        dolore
                        magna aliqua.
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var product in Model.Products.OrderByDescending(x=>x.CreatedAt).Take(6))
            {
                <!-- single product -->
                <div class="col-lg-3 col-md-6">
                    <div class="single-product">
                        <img class="img-fluid" src="~/images/products/@product.FileName" style="width: 255px;height: 272px;" alt="">
                        <div class="product-details">
                            <h6>  @product.Brand @product.Model @product.Name </h6>
                            <div class="price">
                                <h6>$@product.Price</h6>
                            </div>
                            <div class="prd-bottom">
                                <a asp-action="add" asp-controller="loan" asp-route-productId="@product.Id" asp-route-count="1" class="social-info">
                                    <span class="ti-bag"></span>
                                    <p class="hover-text">add to bag</p>
                                </a>
                                <a asp-action="detail" asp-controller="shop" asp-route-id="@product.Id" class="social-info">
                                    <span class="lnr lnr-move"></span>
                                    <p class="hover-text">view more</p>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
