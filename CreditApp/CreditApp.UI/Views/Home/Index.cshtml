<!-- Start exclusive deal Area -->
<section class="exclusive-deal-area">
    <div class="container-fluid">
        <div class="row justify-content-center align-items-center">
            <div class="col-lg-6 no-padding exclusive-left" style="background: url(./images/mainpage/iphone16.jpg) center no-repeat; background-size: cover">
                <div class="row clock_sec clockdiv" id="clockdiv">
                    <div class="col-lg-12">
                        <h1>Exclusive Hot Deal Ends Soon!</h1>
                        <p>Who are in extremely love with eco friendly system.</p>
                    </div>
                    <div class="col-lg-12">
                        <div class="row clock-wrap">
                            <div class="col clockinner1 clockinner">
                                <h1 class="days">150</h1>
                                <span class="smalltext">Days</span>
                            </div>
                            <div class="col clockinner clockinner1">
                                <h1 class="hours">23</h1>
                                <span class="smalltext">Hours</span>
                            </div>
                            <div class="col clockinner clockinner1">
                                <h1 class="minutes">47</h1>
                                <span class="smalltext">Mins</span>
                            </div>
                            <div class="col clockinner clockinner1">
                                <h1 class="seconds">59</h1>
                                <span class="smalltext">Secs</span>
                            </div>
                        </div>
                    </div>
                </div>
                <a asp-action="index" asp-controller="shop" class="primary-btn">Shop Now</a>
            </div>
            <div class="col-lg-6 no-padding exclusive-right">
                <div class="active-exclusive-product-slider">
                    
                    @foreach (var product in Model.Products.OrderByDescending(x=>x.CreatedAt).Take(2))
                    {
                        <!-- single exclusive carousel -->
                        <div class="single-exclusive-slider">
                            <img class="img-fluid" src="~/images/products/@product.FileName" style="width: 300px;height: 270px" alt="">
                            <div class="product-details">
                                <div class="price">
                                    <h6>$@product.Price</h6>
                                </div>
                                <h4>
                                    @product.Brand @product.Model @product.Name
                                </h4>
                                <div class="add-bag d-flex align-items-center justify-content-center">
                                    <a asp-action="add" style="color: orange" asp-controller="loan" asp-route-productId="@product.Id" asp-route-count="1" class="social-info">
                                        <span class="ti-bag"></span>
                                    </a>
                                    <span class="add-text text-uppercase">Add to Bag</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End exclusive deal Area -->

