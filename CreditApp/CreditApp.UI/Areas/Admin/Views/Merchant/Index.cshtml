@model IEnumerable<Merchant>
<div class="row">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">UserName</th>
                <th scope="col">Email</th>
                <th scope="col">Terminal No</th>
                <th scope="col">Count of Branches</th>
                <th scope="col">Update</th>  
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.User.UserName</th>
                    <th>@item.User.Email</th>
                    <th>@item.TerminalNo</th>
                    <th>@item.Branches.Count</th>
                    <td>
                        <a asp-controller="merchant" asp-action="update" asp-route-id="@item.Id">
                            <i class="fas fa-edit text text-primary"></i>
                        </a>
                    </td>
                    <td>
                        <a onclick="if(!confirm('Are you sure?')){return false;}"
                           asp-controller="merchant" asp-action="delete" asp-route-id="@item.Id"
                           class=" delete-item"><i class="fas fa-trash text text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-controller="merchant" asp-action="add" style="display: block; text-decoration: none; color: white; width: 100%; height: 100%" a>
            <div style="width:100%; " class="btn btn-outline-primary">Create Merchant </div>
        </a>
    </div>
</div>