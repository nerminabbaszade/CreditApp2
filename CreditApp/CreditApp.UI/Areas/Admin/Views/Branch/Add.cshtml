@model Branch

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group my-3">
            <label asp-for="Name">Name:</label>
            <input type="text" class="form-control" asp-for="Name"/>
            <span asp-validation-for="Name" class="text text-danger"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="Description">Description:</label>
            <textarea class="form-control" asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="text text-danger"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="Address">Address:</label>
            <input type="text" class="form-control" asp-for="Address"/>
            <span asp-validation-for="Address" class="text text-danger"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="MerchantId">Merchant:</label>
            <select asp-for="MerchantId" class="form-select" aria-label="Default select example">
                @foreach (Merchant item in ViewBag.Merchants)
                {
                <option value="@item.Id">@item.User.Name @item.User.Surname</option>
                }
            </select>
            <span asp-validation-for="MerchantId" class="text text-danger"></span>
        </div>

        @Html.AntiForgeryToken()
        <button type="submit" style="width:100%; " class="btn btn-outline-dark my-3">Add</button>
    </form>
</div>