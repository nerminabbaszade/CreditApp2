@model Loan

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group my-3">
            <label asp-for="Title">Title:</label>
            <input disabled type="text" class="form-control" asp-for="Title"/>
        </div>
        <div class="form-group my-3">
            <label asp-for="MonthlyPrice">Monthly Price:</label>
            <input disabled type="text" class="form-control" asp-for="MonthlyPrice"/>
        </div>
        <div class="form-group my-3">
            <label asp-for="LoanDetail.CurrentAmount">Current Amount:</label>
            <input disabled type="text" class="form-control" asp-for="LoanDetail.CurrentAmount"/>
        </div>
        <div class="form-group my-3">
            <label asp-for="TotalPrice">Total Price:</label>
            <input disabled type="text" class="form-control" asp-for="TotalPrice"/>
        </div>
        <div class="form-group my-3">
            <label asp-for="Terms">Terms:</label>
            <input disabled type="text" class="form-control" asp-for="Terms"/>
        </div>
        <div class="form-group my-3">
            <label asp-for="Customer.User.UserName">Customer Name:</label>
            <input type="text" class="form-control" disabled value="@Model.Customer?.User.UserName"/>
        </div>
        <div class="form-group my-3">
            <label asp-for="Employee.User.UserName">Employee Name:</label>
            <input type="text" class="form-control" disabled value="@(Model.Employee?.User.UserName == null ? "Not Defined" : Model.Employee?.User.UserName)"/>
        </div>
        <div class="d-flex justify-content-around flex-wrap mt-5">
            @foreach (var loanItem in Model.LoanItems)
            {
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" style="height: 288px" src="~/images/products/@loanItem.Product.FileName" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">Detail</h5>
                        <p class="card-text">
                            Name : @loanItem.Product.Name<br/>
                            Count : @loanItem.Count<br/>
                            Price : @loanItem.Product.Price<br/>
                            Total Price : @loanItem.Price
                        </p>
                    </div>
                </div>
            }
        </div>
    </form>
</div>