@model CreditApp.DAL.DTOs.Employees.EmployeeUpdate

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group my-3">
            <label asp-for="Name">Name:</label>
            <input type="text" class="form-control" asp-for="Name"/>
            <span asp-validation-for="Name" class="text text-danger"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="Surname">Surname:</label>
            <input type="text" class="form-control" asp-for="Surname"/>
            <span asp-validation-for="Surname" class="text text-danger"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="Email">Email:</label>
            <input type="email" class="form-control" asp-for="Email"/>
            <span asp-validation-for="Email" class="text text-danger"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="Username">Username:</label>
            <input type="text" class="form-control" asp-for="Username"/>
            <span asp-validation-for="Username" class="text text-danger"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="Password">Password:</label>
            <input type="password" class="form-control" asp-for="Password"/>
            <span asp-validation-for="Password" class="text text-danger"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="ConfirmPassword">Confirm Password:</label>
            <input type="password" class="form-control" asp-for="ConfirmPassword"/>
            <span asp-validation-for="ConfirmPassword" class="text text-danger"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="Position">Position:</label>
            <input type="text" class="form-control" asp-for="Position"/>
            <span asp-validation-for="Position" class="text text-danger"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="BranchId">Branch:</label>
            <select asp-for="BranchId" class="form-select" aria-label="Default select example">
                @foreach (Branch item in ViewBag.Branches)
                {
                <option value="@item.Id">@item.Name</option>
                }
            </select>
            <span asp-validation-for="BranchId" class="text text-danger"></span>
        </div>

        @Html.AntiForgeryToken()
        <button type="submit" style="width:100%; " class="btn btn-outline-dark my-3">Update</button>
    </form>
</div>