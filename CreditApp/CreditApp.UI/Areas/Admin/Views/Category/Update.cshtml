@model Category

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group my-3">
            <label asp-for="Name" >Name:</label>
            <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text text-danger"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="ParentId">Parent</label>
            <select asp-for="ParentId" class="form-select" aria-label="Default select example">
                @foreach (Category item in ViewBag.Categories)
                {
                <option value="@item.Id">@item.Name</option>
                }
            </select>
            <span asp-validation-for="ParentId" class="text text-danger"></span>
        </div>
        @Html.AntiForgeryToken()
        <button type="submit" style="width:100%; " class="btn btn-outline-dark my-3">Update</button>
    </form>
</div>